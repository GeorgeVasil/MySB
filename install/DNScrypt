##################### FIRST LINE #####################################

PackagesManage install "ldnsutils libldns-dev"

if ! hash dnscrypt-proxy 2>/dev/null; then
	# LIBsodium
	if [ -d /etc/MySB/sources/libsodium ]; then
		cd /etc/MySB/sources/libsodium/
		git stash
		git pull
	else
		if [ -d /etc/MySB/temp/libsodium ]; then
			mv /etc/MySB/temp/libsodium /etc/MySB/sources/
		else
			git clone $GIT_libsodium /etc/MySB/sources/libsodium
		fi
	fi
	cd /etc/MySB/sources/libsodium/
	./configure
	make -j$PROCESSOR
	make install

	# DNScrypt
	if [ -d /etc/MySB/sources/dnscrypt ]; then
		cd /etc/MySB/sources/dnscrypt/
		git stash
		git pull
	else
		if [ -d /etc/MySB/temp/dnscrypt ]; then
			mv /etc/MySB/temp/dnscrypt /etc/MySB/sources/
		else
			git clone $GIT_dnscrypt /etc/MySB/sources/dnscrypt
		fi
	fi
	cd /etc/MySB/sources/dnscrypt/
	./autogen.sh
	./configure --enable-plugins --enable-ltdl-install
	make -j$PROCESSOR
	make install
fi
	
# -----------------------------------------
source /etc/MySB/inc/includes_after
# -----------------------------------------
##################### LAST LINE ######################################