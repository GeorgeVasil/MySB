##################### FIRST LINE #####################################
#
# Usage:	MySB_UpgradeMe <version>
#
##################### FIRST LINE #####################################

#### Update actual repo
ScriptInvoke 'source' '/etc/MySB/bin/MySB_UpdateGitHubRepo'

#### Check if new version
MySB_NewVersion="`cat /etc/MySB/version`"
MySB_CurrentVersion=`cat /etc/MySB/infos/version.info`

if [ "$MySB_CurrentVersion" == "$MySB_NewVersion" ]; then
	echo -e -n "${CGREEN}MySB is up to date!$CEND"
	echo
	source /etc/MySB/inc/includes_after
	exit 0
fi

#### Upgrade system
ScriptInvoke 'source' '/etc/MySB/bin/MySB_UpgradeSystem'

#### STOP some services
service cron stop
for seedUser in $LISTUSERS; do
	log_daemon_msg "Stop rTorrent service for $seedUser"
	service rtorrent-$seedUser stop
	StatusLSB
done

#### Backup
mkdir /etc/MySB/upgrade/backup
mv /etc/MySB/upgrade /tmp/
cp -R /etc/MySB /tmp/upgrade/Backup_$MySB_CurrentVersion-to-$MySB_NewVersion
tar -zcvf Backup_$MySB_CurrentVersion-to-$MySB_NewVersion.tar.gz /tmp/upgrade/backup/
rm -rf /tmp/upgrade/Backup_*
mv /tmp/upgrade /etc/MySB/

#### MySB Script GitHub
cd /etc/MySB/
sudo git fetch --all
sudo git stash
sudo git checkout -b $MySB_NewVersion origin/$MySB_NewVersion
sudo git pull

#### Update version info
echo "$MySB_NewVersion" > /etc/MySB/infos/version.info
rm /etc/MySB/files/banner_*

#### Completing the upgrade
if [ -f /etc/MySB/upgrade/From_$MySB_CurrentVersion-to-$MySB_NewVersion.bsh ]; then
	ScriptInvoke 'source' '/etc/MySB/upgrade/From_$MySB_CurrentVersion-to-$MySB_NewVersion.bsh'
fi

#### START some services
service cron restart
for seedUser in $LISTUSERS; do
	log_daemon_msg "Stop rTorrent service for $seedUser"
	service rtorrent-$seedUser restart
	StatusLSB
done

# -----------------------------------------
source /etc/MySB/inc/includes_after
# -----------------------------------------
##################### LAST LINE ######################################        