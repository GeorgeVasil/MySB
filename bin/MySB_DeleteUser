##################### FIRST LINE #####################################

if [ "$USAGE" == "ON" ]; then
	ListingUsers
	LIST=""
	for seedUser in $UsersList; do
		if [ "$seedUser" != "$MainUser" ]; then
			LIST="$LIST|${CYELLOW}$seedUser$CEND"
		fi
	done
	LIST="`echo \($LIST\) | sed -e 's/^//g;' | sed -e 's/(|/(/g;'`"

	if [ "$LIST" != "" ]; then
		echo -e "${CBLUE}Available users to delete:$CEND $LIST"
		echo -e "${CYELLOW}Type$CEND ${CGREEN}none$CEND ${CYELLOW}to cancel.$CEND"
	else
		echo -e "${CRED}Any user to delete ...$CEND $LIST"
		EndingScript 0 0
	fi	
	
	QuestionGetString NO  "Type username to DELETE: " NEWUSER
	
	if [ "$NEWUSER" == "none" ]; then
		EndingScript 0 0
	else
		while [ "$NEWUSER" == "$MainUser" ]; do
			QuestionGetString NO  "Type username to DELETE: " NEWUSER
		done	
	fi	
fi

#### Stop services
ManageServices stop

#### User ID
UserId=$(sqlite3 $MySB_DB "SELECT id_users FROM users WHERE users_ident = '$NEWUSER'")

#### crontab
log_daemon_msg "Delete cron for $NEWUSER"
crontab -l > /tmp/crontab.tmp
sed -i '/'$NEWUSER'/d' /tmp/crontab.tmp
crontab /tmp/crontab.tmp
rm /tmp/crontab.tmp
StatusLSB

#### FTP
log_daemon_msg "Delete FTP access & share for $NEWUSER"
sed -i '/'$NEWUSER'/d' /etc/vsftpd.chroot_list
umount /home/$NEWUSER/rtorrent/share
StatusLSB

#### NFS
log_daemon_msg "Delete NFS access for $NEWUSER"
sed -i '/'$NEWUSER'/d' /etc/exports
StatusLSB

#### Samba
log_daemon_msg "Delete Samba access for $NEWUSER"
smbpasswd -x $NEWUSER &> /dev/null
StatusLSB

#### NginX
log_daemon_msg "Remove the access permission to the web server for $NEWUSER"
sqlite3 $MySB_DB "SELECT ipv4 FROM users_addresses WHERE id_users = '$UserId'" | while read ROW; do
	IPv4=`echo $ROW | awk '{split($0,a,"|"); print a[1]}'`
	sed -i '/'$IPv4'/d' /etc/nginx/locations/MySB.conf
done
StatusLSB

#### remove current password from htpassword
log_daemon_msg "Delete Web server account for $NEWUSER"
sudo htpasswd -D /etc/nginx/passwd/MySB $NEWUSER
sudo rm -f /etc/nginx/passwd/MySB_$NEWUSER
StatusLSB

#### remove files
log_daemon_msg "Remove fils and init script for $NEWUSER"
update-rc.d -f rtorrent-$NEWUSER.conf remove &> /dev/null
if [ -f /etc/init.d/rtorrent-$NEWUSER.conf ]; then
	sudo rm -f /etc/init.d/rtorrent-$NEWUSER.conf
fi
if [ -f /etc/nginx/rpc/$NEWUSER.conf ]; then
	sudo rm -f /etc/nginx/rpc/$NEWUSER.conf
fi
if [ -f /etc/nginx/rpc/$NEWUSER.cakebox ]; then
	sudo rm -f /etc/nginx/rpc/$NEWUSER.cakebox
fi
if [ -f /etc/MySB/web/openvpn/openvpn_$NEWUSER.zip ]; then
	/etc/MySB/web/openvpn/openvpn_$NEWUSER.zip
fi
if [ -d /etc/MySB/web/rutorrent/conf/users/$NEWUSER ]; then
	sudo rm -rf /etc/MySB/web/rutorrent/conf/users/$NEWUSER
fi
if [ -d /etc/MySB/web/rutorrent/share/users/$NEWUSER ]; then
	sudo rm -rf /etc/MySB/web/rutorrent/share/users/$NEWUSER
fi
if [ -d /etc/MySB/web/seedbox-manager/conf/users/$NEWUSER ]; then
	sudo rm -rf /etc/MySB/web/seedbox-manager/conf/users/$NEWUSER
fi
sqlite3 $MySB_DB "DELETE FROM users_addresses WHERE id_users = '$UserId'"
sqlite3 $MySB_DB "DELETE FROM users WHERE users_ident = '$NEWUSER'"
StatusLSB

#### delete iptables rules
ScriptInvoke 'source' '/etc/MySB/scripts/FirewallAndSecurity.bsh' 'new'

#### rtorrent max memory
MEMORY=`free -m | grep Mem | awk '{ print $2 }'`
CountingUsers
ListingUsers
for seedUser in $UsersList; do
	log_daemon_msg "Changing parameter 'pieces.memory.max.set' for $seedUser"
	LIGN=$(sed -n '/pieces.memory.max.set/=' /home/$seedUser/.rtorrent.rc)
	sudo sed -i ''$LIGN'd' /home/$seedUser/.rtorrent.rc
	sed -i ''$LIGN'i\#pieces.memory.max.set = '$(((($MEMORY/$TotalUsers)*1024)*1024))'\n' /home/$seedUser/.rtorrent.rc
	StatusLSB
done

#### system user
log_daemon_msg "Delete $seedUser system account"
sudo userdel --remove --force $NEWUSER &> /dev/null
if [ -d /home/$NEWUSER ]; then
	sudo rm -rf /home/$NEWUSER
fi
if [ -d /var/run/screen/S-$NEWUSER ]; then
	sudo rm -rf /var/run/screen/S-$NEWUSER
fi
StatusLSB

#### renting
MonthlyPayment "$NEWUSER"

#### Stop services
ManageServices start

# -----------------------------------------
source /etc/MySB/inc/includes_after.bsh
# -----------------------------------------
##################### LAST LINE ######################################